<h2 class="text-center mt-4"><%= @employee.name %>'s Profile</h2>
<div class="row justify-content-md-center mb-4">
  <div class="card border border-info" style="width: 30rem;">
    <%# <img src="app/assets/images/_MG_6088(1).jpg" class="card-img-top" alt="..."> %>
    <div class="card-body">
      <div class="mb-2">
        <h5>Email:</h5>
        <%= @employee.email %>
        <h5>Addresses:</h5>
        <% @employee.addresses.each do |f| %>
          <%= f.category %>
          <%= f.flat_no %>
          <%= f.area %>
          <%= f.street_no %>
          <%= f.landmark %>
          <%= f.city %>
          <%= f.district %>
          <%= f.state %>
          <%= f.postal_code %>
        <% end %>
        <h5>Contacts:</h5>
        <% @employee.contacts.each do |f|%>
          <%= f.contact_type %>
          <%= f.contact_no %>
        <% end %>
        <h5>Date of Birth:</h5>
        <%= @employee.dob %>
        <h5>Experience:</h5>
        <%= @employee.experience %>
        <h5>Department:</h5>
        <%= @employee.department %>
        <h5>Designation:</h5>
        <%= @employee.designation %>
        <h5>Joining Date:</h5>
        <%= @employee.joining_date %>
      </div>
      <%= link_to 'Edit Profile', edit_employee_path(@employee), class: "btn btn-secondary" %>
      <%= link_to 'Back to Employee List', employees_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
