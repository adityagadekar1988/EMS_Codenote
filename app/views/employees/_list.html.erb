<table class="table table-hover" >
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Date of Birth</th>
      <th>Experience</th>
      <th>Department</th>
      <th>Designation</th>
      <th>Joining Date</th>        
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee|%>
      <tr>
        <td><%= employee.id %></td>
        <td><%= link_to employee.name, employee_path(employee) %></td>
        <td><%= employee.email %></td>
        <td><%= employee.dob.to_formatted_s(:rfc822) %></td>
        <td><%= employee.experience %></td>
        <td><%= employee.department %></td>
        <td><%= employee.designation %></td>
        <td><%= employee.joining_date.to_formatted_s(:rfc822) %></td>  
        <td><%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Delete', employee_path(employee), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %></td>       
      </tr>
    <% end %>
  </tbody>  
</table>
